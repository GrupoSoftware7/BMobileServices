<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.software.bmobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.software.bmobile.Logeo"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.software.bmobile.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.software.bmobile.Compra"
            android:label="@string/title_activity_compra"
            android:parentActivityName="com.software.bmobile.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.software.bmobile.Home" />
        </activity>
        <activity
            android:name="com.software.bmobile.Recarga"
            android:label="@string/title_activity_recarga"
            android:parentActivityName="com.software.bmobile.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.software.bmobile.Home" />
        </activity>
        <activity
            android:name=".Reporte"
            android:label="@string/title_activity_reporete"
            android:parentActivityName="com.software.bmobile.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.software.bmobile.Home" />
        </activity>
    </application>

</manifest>
